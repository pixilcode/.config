# Auth with polkit
#
# NOTE: it's important to use the authentication
#       agent provided by your system. See
#       https://wiki.archlinux.org/title/Polkit#Authentication_agents
#       for more details
exec /usr/lib/polkit-kde-authentication-agent-1

# Desktop notifications
exec mako --default-timeout=10000

# Network Applet - displays network info in the system tray (waybar)
exec nm-applet --indicator

# GTK3 applications take a long time to start
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
     
# Welcome App
exec dex --autostart --environment sway --search-paths /etc/xdg/autostart/:~/.config/autostart/
